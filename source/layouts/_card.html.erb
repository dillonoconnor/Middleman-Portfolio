<article class="card mt-5">
  <div class="card-image is-flex-mobile is-justify-content-center is-hidden-tablet">
    <figure class="m-5 image is-256x256">
      <%= image_tag image  %>
    </figure>
  </div>
  <div class="card-content">
    <div class="media is-align-items-center">
      <div class="media-left is-hidden-mobile">
	<figure class="image">
	  <%= image_tag image %>
	</figure>
      </div>
      <div class="media-content p-3">
	<p class="title has-text-weight-light has-text-white is-2"><%= title %></p>
	<p>
	  <%= description %>
	</p>
	  <div class="is-flex is-justify-content-space-between is-align-items-center mt-5">
	    <p class="is-italic is-size-7">Please be patient as the Heroku dyno spins up--thank you!</p>
	    <%= link_to "Check It Out", project_link, class: "button is-link has-text-weight-semibold" %>
	  </div>
      </div>
    </div>
  </div>
</article>
